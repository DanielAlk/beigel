<h1 style="margin-bottom:30px;">
  <i class="fa fa-exclamation-circle fa-fh" aria-hidden="true"></i> Notificaciones
  <% if @object.present? %>
    <% @back_path = @object.class.name == 'Property' ? property_contacts_path(@object) : development_contacts_path(@object) %>
  <% end %>
  <%= link_to 'Volver al listado', (@back_path || contacts_path), class: 'btn btn-warning pull-right' %>
</h1>

<h3>
  <% if @contact.subject == :contact %>
    Contacto
  <% end %>
  <% if @contact.subject == :services %>
    Contacto en servicios:
  <% end %>
  <% if @contact.subject == :investments %>
    Contacto en inversiones:
  <% end %>
  <% if @contact.subject == :assessments %>
    Contacto en tasaciones:
  <% end %>
  <% if @contact.subject == :development %>
    Contacto en emprendimiento:
  <% end %>
  <% if @contact.subject == :property %>
    Contacto en inmueble:
  <% end %>
</h3>

<% if @contact.contactable.present? %>
  <div class="mar-xs-S-30">
    <% if @contact.development? %>
      <%= render 'developments/card', development: @contact.contactable, card_actions: false %>
    <% end %>
    <% if @contact.property? %>
      <%= render 'properties/card', property: @contact.contactable, card_actions: false %>
    <% end %>
  </div>
<% end %>

<table class="table">
  <tbody>
    <tr>
      <th scope="row">De:</th>
      <td><%= @contact.name %></td>
    </tr>
    <tr>
      <th scope="row">Email:</th>
      <td><%= @contact.email %></td>
    </tr>
    <tr>
      <th scope="row">Tel√©fono:</th>
      <td><%= @contact.tel %></td>
    </tr>
    <tr>
      <th scope="row">Mensaje:</th>
      <td><%= @contact.message %></td>
    </tr>
  </tbody>
</table>