<section class="search-box">
	<div class="container bg-primary">
		<%= form_tag buy_path, method: :post, role: 'form' do %>
			<div class="row drawer-xs-285 closed" data-handle="#search-box-handle">
				<div class="col-xs-12 col-sm-6 col-md-4">
					<div class="form-group">
						<%= select_tag :operation_type, options_for_select([['Comprar',:buy],['Alquilar',:rent]]), title: 'Tipo de operaci칩n', class: 'form-control', multiple: !browser.mobile?, data: { max_options: 1, mobile: browser.mobile? }, prompt: browser.mobile? ? 'Tipo de operaci칩n' : nil %>
					</div>
					<div class="form-group row">
						<div class="col-xs-4">
							<%= text_field_tag :price_min, nil, class: 'form-control autonumeric', placeholder: 'Desde' %>
						</div>
						<div class="col-xs-4">
							<%= text_field_tag :price_max, nil, class: 'form-control autonumeric', placeholder: 'Hasta' %>
						</div>
						<div class="col-xs-4">
							<label class="radio-inline">
								<%= radio_button_tag :currency, :ars, true %> $
							</label>
							<label class="radio-inline">
								<%= radio_button_tag :currency, :usd %> u$s
							</label>
						</div>
					</div>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-4">
					<div class="form-group">
						<%= select_tag :property_type, options_for_select([['PH',:ph],['Casa',:house],['Departamento',:apartment]]), class: 'form-control', multiple: true, title: 'Tipo de propiedad', data: { mobile: browser.mobile? } %>
					</div>
					<div class="form-group">
						<%= select_tag :rooms, options_for_select([['Monoambiente', 1], ['2 Ambientes', 2], ['3 Ambientes', 3], ['4 o m치s', 4]]), class: 'form-control', multiple: true, title: 'Ambientes', data: { mobile: browser.mobile? } %>
					</div>
				</div>
				<div class="clearfix-xs clearfix-sm"></div>
				<div class="cols-sm-2 col-md-4">
					<div class="form-group">
						<%= select_tag :neighborhood, options_for_select(['Palermo', 'Colegiales', 'Chacarita']), class: 'form-control', multiple: true, title: 'Barrio', data: { mobile: browser.mobile? } %>
					</div>
					<div class="form-group">
						<%= select_tag :surface, options_for_select(['Menos de 100', '101 a 200', '201 a 300', '301 o m치s']), class: 'form-control', multiple: true, title: 'Superficie', data: { mobile: browser.mobile? } %>
					</div>
				</div>
			</div>
			<div class="search-box-submit">
				<%= submit_tag 'Buscar', class: 'btn btn-default btn-fix', id: 'search-box-handle' %>
			</div>
		<% end %>
	</div>
</section>