<% row_class = false unless local_assigns.has_key? :row_class %>

<% content_for :extra_js do %>
	$('.card-gallery').gallery();
	Utils.paginationNext();
<% end %>

<section class="pad-xs-S-70">
	<div class="container bg-white">
		<div class="section-title">
			<h2>Promociones</h2>
			<p>Tenemos oportunidades para hacer rendir mas tu dinero y tu inversion.</p>
		</div>
		<div class="row <%= row_class %>" id="promotions">
			<%= render @promotions %>
		</div>
		<div class="text-center mar-xs-N-30">
			<% if params[:action] == 'promotions' %>
				<% unless @promotions.total_pages == @promotions.current_page %>
					<% next_page = params[:page].present? ? params[:page].to_i + 1 : 2 %>
					<%= link_to '?page=', id: 'pagination_next', data: { page: next_page } do %>
						Ver Más &nbsp;<i class="fa fa-arrow-circle-down"></i>
					<% end %>
				<% end %>
			<% else %>
				<%= link_to promotions_page_path do %>
					Ver Más &nbsp;<i class="fa fa-arrow-circle-right"></i>
				<% end %>
			<% end %>
		</div>
	</div>
</section>